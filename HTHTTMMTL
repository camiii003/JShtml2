            <label>Email:</label><br>
            <input type="text" id="email"><br>
            <label>Message:</label><br>
            <textarea id="message"></textarea><br>
            <button type="submit">Submit</button>
            <button type="reset" onclick="return confirmReset()">Reset</button>
        </form>
    </main>
</body>
</html>



